<?xml version="1.0"?>
<project default="compile" name="TestingFramew.ork">
	<property name="remote-share-folder" location="" />
	
	
    <target name="clean">
        <delete file="Settings.xml"/>
        <delete file="client.jar"/>
    </target>

	<target name="init">
		 <tstamp/>
	     <mkdir dir="./"/>
	</target>

    <target name="retrieve" depends="init">
        <get src="http://192.168.2.38/TestingFramework/client.jar" dest="./" verbose="true" usetimestamp="true"/>
        <get src="http://192.168.2.38/TestingFramework/Settings.xml" dest="./" verbose="true" usetimestamp="true"/>
    </target>
	
	<target name="run" depends= "retrieve">
        <java jar="client.jar" fork="true"/>
	</target>
</project>
