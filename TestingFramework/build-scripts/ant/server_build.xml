<?xml version="1.0"?>
<project basedir="../../" default="compile" name="TestingFramework">
	<property name="src" location="src"/>
	<property name="build" location="build"/>
	<property name="dist" location="dist"/>
	<property name="libs" location="libs"/>
	<property name="share" location="/var/www/html/TestingFramework" />
	
	<path id="class.path">
	  <fileset dir="libs">
	    <include name="**/*.jar" />
	  </fileset>
	</path>
	
    <path id="TestingFramework.classpath">
		<pathelement location="${build}"/>
	</path>
	
    <target name="clean">
        <delete dir="${build}"/>
        <delete dir="${dist}"/>
    </target>

	<target name="init">
		 <tstamp/>
	     <mkdir dir="${build}"/>
	     <mkdir dir="${dist}"/>
	</target>
	
    <target name="compile" depends="init">
		<tstamp/>
        <javac includeantruntime="false" srcdir="${src}" destdir="${build}" debug="true">
	        <classpath refid="TestingFramework.classpath"/>
        	<classpath refid="class.path" /> 
    	</javac>
    </target>

    <target name="jar" depends="compile">
        <jar destfile="${dist}/server.jar" basedir="${build}">
            <manifest>
                <attribute name="Main-Class" value="com.lue.server.Server"/>
            </manifest>
            <zipgroupfileset dir="${libs}" includes="**/*.jar" />
        </jar>
	    <copy file="${basedir}/Settings.xml" todir="${dist}"/>
    </target>

    <target name="run" depends= "jar">
        <java jar="${dist}/server.jar" fork="true" failonerror="true"/>
    </target>
	
	<target name="share" depends= "jar">
	        <copy file="${dist}/server.jar" todir="${share}"/>
	        <copy file="${dist}/Settings.xml" todir="${share}"/>
	</target>
</project>
